<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
     <typeAlias type="Advertiser.model.Advertiser" alias="advertiser"/>
  </typeAliases>  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.h2.Driver"/>
<!--<property name="url" value="jdbc:h2:~/test"/> -->
		<property name="url" value="jdbc:h2:mem:test_mem;INIT=CREATE TABLE ADVERTISER(ID INT PRIMARY KEY AUTO_INCREMENT, NAME VARCHAR(255), CONTACTNAME VARCHAR(255), CREDITLIMIT INT);"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="AdvertiserMapper.xml" />
  </mappers>
</configuration>